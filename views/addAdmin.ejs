<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body style="background-color:grey">
    <%- include ('partials/navbar.ejs') %>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4 shadow-sm" style="width: 100%; max-width: 400px;">
            <div class="card-body"style="background-color:white">
                <h2 class="card-title text-center mb-4">Add Admin</h2>
                <form action="/ADDmin" method="POST">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter a email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter a password" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="repassword" name="repassword" placeholder="Retype the password" required>
                    </div>
                    <%if(wrong === 2){%>
                        <p style="color: red;">Email Already used</p>
                    <%}else if (wrong === 1){%>
                        <p style="color: red;">Password Must be the same</p>
                    <%}%>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">ADDmin</button>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
