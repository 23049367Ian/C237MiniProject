<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dog Adoption Site</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .card {
      height: 300px;
      border: none;
      transition: transform 0.2s ease;
    }
    .card.shadow:hover {
      transform: translateY(-5px);
    }
    .card-img-top {
      height: 70%;
      object-fit: cover;
    }
    .card-body {
      height: 30%;
      display: flex;
      align-items: center;
      padding: 1rem;
    }
    .card-title {
      margin: 0;
      font-size: 1.2rem;
    }
    .btn-search {
      margin-right: 1rem;
    }
    .search-section {
      border: 1px solid #ddd; 
      border-radius: 8px; 
      padding: 15px;
      margin-bottom: 20px;
    }
    .dogs-section {
      border: 1px solid #ddd; 
      border-radius: 8px; 
      padding: 15px;
    }
    
  </style>
</head>
<body>
  <%- include ('partials/publicNav.ejs') %>

  <!-- Filters -->
   <form action="/filter" method="GET">
    <div class="container mt-3 search-section">
        <div class="row align-items-center">
        <div class="col-md-3">
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#tags">Traits</button>
        </div>
        <div class="col-md-3">
            <select class="form-select" id="gender" name="gender">
            <option value="">Select Gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            </select>
        </div>
        <div class="col-md-3">
            <div class="form-check">
            <input class="form-check-input" type="checkbox" id="HDB" name="HDB" value="yes">
            <label class="form-check-label" for="HDB">HDB Approved</label>
            </div>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-success btn-search">SEARCH</button>
            <a href="/" class="btn btn-danger">RESET</a>
        </div>
        </div>
        <!-------TAg-->
        <div id="tags" class="collapse">
          <hr>
          <div class="row">
            <% if (tags){%>
                  <div class="row">
                    <% for(let i = 0; i < tags.length; i++) { %>
                      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-2">
                        <div class="form-check">
                          <input type="checkbox" id="tag<%=i%>" name="tags" value="<%=tags[i].tagID%>" class="form-check-input">
                          <label for="tag<%=i%>" class="form-check-label"><%=tags[i].tagName%></label>
                        </div>
                      </div>
                    <%}%>
                  </div>
                <%} else {%>
                  <div class="alert alert-danger">Error in Retrieving Traits</div>
                <%}%>
          </div>
    </div>
<!--------------------------------------------------------->
  </div>
 </form>
  <!-------------------------------------------------->
  <div class="container mt-3 dogs-section">
    <div class="row">
      <% for (let i = 0; i < dogs.length; i++) { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
          <a href="/dog/<%= dogs[i].dogID %>" class="text-decoration-none">
            <div class="card shadow">
              <img src="/images/<%= dogs[i].dogImage %>" class="card-img-top" alt="Dog Image">
              <div class="card-body">
                <h5 class="card-title"><%= dogs[i].dogName %></h5>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
